<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Mile.Aria2</id>
    <version>1.0.66.0</version>
    <description>Customized version of aria2, specialize for MSVC toolchain</description>
    <authors>Kenji Mouri</authors>
    <projectUrl>https://github.com/ProjectMile/Mile.Aria2</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="file">License.md</license>
    <readme>ReadMe.md</readme>
    <dependencies>
      <group targetFramework="native0.0" />
      <group targetFramework="uap10.0" />
      <group targetFramework=".NETStandard2.0" />
    </dependencies>
    <repository type="git" url="https://github.com/ProjectMile/Mile.Aria2.git" />
  </metadata>
  <files>

    <file src="_._" target="lib\native" />
    <file src="_._" target="lib\netstandard2.0" />
    <file src="_._" target="lib\uap10.0" />

    <file src="..\Output\Binaries\Release\Win32\Mile.Aria2.exe" target="Redist\x86" />
    <file src="..\Output\Binaries\Release\Win32\Mile.Aria2.pdb" target="Redist\x86" />

    <file src="..\Output\Binaries\Release\x64\Mile.Aria2.exe" target="Redist\x64" />
    <file src="..\Output\Binaries\Release\x64\Mile.Aria2.pdb" target="Redist\x64" />

    <file src="..\Output\Binaries\Release\ARM64\Mile.Aria2.exe" target="Redist\ARM64" />
    <file src="..\Output\Binaries\Release\ARM64\Mile.Aria2.pdb" target="Redist\ARM64" />

    <file src="Mile.Aria2.targets" target="build\native" />
    <file src="Mile.Aria2.targets" target="build\netstandard2.0" />
    <file src="Mile.Aria2.targets" target="build\uap10.0" />

    <file src="..\ReadMe.md" target="." />
    <file src="..\License.md" target="." />
    <file src="..\ReleaseNotes.md" target="." />

  </files>
</package>